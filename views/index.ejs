<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <base href="/">

  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.4.0/animate.min.css">
  <link rel="stylesheet" type="text/css" href="/css/styles.css">

  <title></title>
</head>
<body ng-app="RealOverflow">
  <nav class="navbar navbar-default" role="navigation" ng-controller="NavCtrl">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" ng-click="navCollapsed = !navCollapsed">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">RealOverflow</a>
    </div>
  
    <div class="navbar-collapse collapse" uib-collapse="navCollapsed">
      <ul class="nav navbar-nav">
        <li><a href="/about" ng-click="navCollapsed=true">About</a></li>
        <li><a href="/questions" ng-click="navCollapsed=true">Questions</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right" ng-hide="loggedIn()">
        <li><a ng-click="openLoginModal(); navCollapsed=true">Login</a></li>
        <li><a ng-click="openSignupModal(); navCollapsed=true">Signup</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right" ng-show="loggedIn()">
        <li><a ng-click="logout(); navCollapsed=true">Logout</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </nav>

  <div class="container">
    <ng-view></ng-view>
  </div>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.7/angular.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.7/angular-route.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0-beta.1/angular-animate.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.14.3/ui-bootstrap-tpls.js"></script>
  <script type="text/javascript" src="/socket.io/socket.io.js"></script>
  <script type="text/javascript" src="/app/js/app.js"></script>
  <script type="text/javascript" src="/app/js/services/AuthService.js"></script>
  <script type="text/javascript" src="/app/js/controllers/HomeCtrl.js"></script>
  <script type="text/javascript" src="/app/js/controllers/AboutCtrl.js"></script>
  <script type="text/javascript" src="/app/js/controllers/QuestionCtrl.js"></script>
  <script type="text/javascript" src="/app/js/controllers/CommentCtrl.js"></script>
  <script type="text/javascript" src="/app/js/controllers/NavCtrl.js"></script>
</body>
</html>